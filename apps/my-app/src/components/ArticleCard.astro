---
interface Props {
    title: string;
    highlight?: boolean;
}

const { title, highlight = false } = Astro.props;
---

<div class:list={[highlight ? 'highlight' : '']}>
    <h2>{title}</h2>
    <slot />
    <slot name="highlight" />
</div>

<style>
    .highlight {
        border: 2px solid gold;
        padding: 10px;
        background-color: #fff8dc;
    }
</style>

